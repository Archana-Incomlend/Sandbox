<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Company</field>
        <field>Product_type__c</field>
        <field>Industry_Sector__c</field>
        <field>Good_and_Services__c</field>
        <field>Address</field>
        <field>Registration_Number__c</field>
        <field>AnnualRevenue</field>
        <field>Credit_Limit_requested__c</field>
        <field>Credit_Limit_Requested_CCY__c</field>
        <field>Submitted_by__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Credit_Limit_requested_approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>mel.dinh@incomlend.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>When the risk Manager approves the Credit limit request</description>
        <label>Credit Limit requested approved</label>
        <name>Credit_Limit_requested_approved</name>
    </approvalStep>
    <description>Approval Credit Limit lead for Buyer</description>
    <emailTemplate>Incomlend_emails/Lead_Credit_Limit_request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5</booleanFilter>
        <criteriaItems>
            <field>Lead.Company</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Credit_Limit_requested__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Country</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Sector__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Company</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CL_Limit_approved</name>
            <type>Task</type>
        </action>
        <action>
            <name>Credit_Limit_requested_approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Credit_Limit_requested_approved2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Lead_Email_for_submission_CL_to_Op</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Credit_Limit_Rejected_by_Risk</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Credit_Limit</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Credit_Limit_Requested</name>
            <type>Task</type>
        </action>
        <action>
            <name>Date_Request_Credit_Limit</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approval Credit Limit Lead</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
