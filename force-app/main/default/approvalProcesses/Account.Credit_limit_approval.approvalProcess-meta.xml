<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Trade_Model__c</field>
        <field>Sector__c</field>
        <field>Goods_and_Services_new__c</field>
        <field>Sales_Owner__c</field>
        <field>BillingAddress</field>
        <field>Company_registration_number__c</field>
        <field>AnnualRevenue</field>
        <field>Credit_Limit_Requested__c</field>
        <field>Credit_Limit_Requested_CCY__c</field>
        <field>Potential_Supplier_s__c</field>
        <field>goods_or_services_offered_text__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Credit_Limit_requested_approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Send_op_credit_limit_request</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>mel.dinh@incomlend.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Credit limit request approved</label>
        <name>Credit_Limit_Request_approved</name>
    </approvalStep>
    <description>The sales submit the buyer to to the risk Manager for Credit Limit request</description>
    <emailTemplate>Incomlend_emails/Credit_Limit_requested</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6 AND 7 AND 8 AND 9 AND 10</booleanFilter>
        <criteriaItems>
            <field>Account.Credit_Limit_Request_Approved__c</field>
            <operation>notEqual</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.RecordType</field>
            <operation>equals</operation>
            <value>Buyer</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Sales_Owner__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Buyer_check_text__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Company_registration_number__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Account.AnnualRevenue</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Credit_Limit_Requested_CCY__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Credit_Limit_Requested__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Account.BillingCountry</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Credit_limit_request_approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_for_submission_CL_to_op</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Credit Limit approval</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
