<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>onboarding_checklist__c</field>
        <field>onboarding_doc_received__c</field>
        <field>Onboarding_Comments__c</field>
        <field>Agent__c</field>
        <field>Onboarding_Actions_Complete__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>mel.dinh@incomlend.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>trustee_approval</label>
        <name>trustee_approval</name>
    </approvalStep>
    <emailTemplate>Incomlend_emails/Onboarding_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 and 2 AND 3 AND 4 AND 5</booleanFilter>
        <criteriaItems>
            <field>Account.Trustee__c</field>
            <operation>includes</operation>
            <value>Amicorp Trust</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Onboarding_Amicorp_Trustee_Status__c</field>
            <operation>equals</operation>
            <value>Approval Submitted to Trustee</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.RecordType</field>
            <operation>equals</operation>
            <value>Supplier</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Sales_Owner__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Account.onboarding_stage__c</field>
            <operation>equals</operation>
            <value>60.Approvals</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Amicorp_Trustee</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>onboarding_completed_date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_onboarding_approved_checkbox</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_onboarding_stage</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>checkbox_submitted_for_approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>onboarding approval trustee Amicorp</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
