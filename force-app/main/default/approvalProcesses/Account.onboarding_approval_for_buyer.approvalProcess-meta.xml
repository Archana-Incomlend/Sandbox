<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Website</field>
        <field>Owner</field>
        <field>Sales_Owner__c</field>
        <field>Credit_Limit_USD_Equiv__c</field>
        <field>Agent__c</field>
        <field>Check_List_Onboarding__c</field>
        <field>Check_List_Notes_Attachment__c</field>
        <field>Check_List_Notes__c</field>
        <field>Onboarding_Actions_Complete__c</field>
        <field>Onboarding_Comments__c</field>
        <field>onboarding_checklist__c</field>
        <field>onboarding_doc_received__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>update_onboarding_approved_checkbox</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>update_onboarding_stage</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>mel.dinh@incomlend.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>onboard approval 2</label>
        <name>onboard_approval_2</name>
    </approvalStep>
    <emailTemplate>Incomlend_emails/Onboarding_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.onboarding_stage__c</field>
            <operation>equals</operation>
            <value>60.Approvals</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.RecordType</field>
            <operation>equals</operation>
            <value>Buyer</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Sales_Owner__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>onboarding_completed_date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_To_status_99</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>checkbox_submitted_for_approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>onboarding approval for buyer</label>
    <processOrder>4</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
