<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>CCY__c</field>
        <field>First_Invoice_amount__c</field>
        <field>Average_Funding_Period__c</field>
        <field>Facility_Fees__c</field>
        <field>Company_Activity__c</field>
        <field>Maintenance_of_dedicated_bank_account__c</field>
        <field>One_time_fees_for_opening_dedicated_bank__c</field>
        <field>Advanced_Amount__c</field>
        <field>Advanced_Amount_Other__c</field>
        <field>Annual_Fees__c</field>
        <field>Annual_Fees_Per_Trade_Partner__c</field>
        <field>Processing_Fees__c</field>
        <field>Supplier_Discount_Rate__c</field>
        <field>Termsheet_Potential_Buyers__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>archana.patel@incomlend.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mel.dinh@incomlend.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approve Term Sheet</label>
        <name>Approve_Term_Sheet</name>
    </approvalStep>
    <emailTemplate>Incomlend_emails/Lead_Termsheet_Approval_Request_1</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Lead.Termsheet_Approved_By_Sales_Head__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.RecordType</field>
            <operation>equals</operation>
            <value>Lead Supplier</value>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.CCY__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Advanced_Amount__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Average_Funding_Period__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Lead_Termsheet_Approval_Request_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Term_Sheet_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Lead_Termsheet_Approval_Request_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Term_Sheet_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Lead Termsheet Approval Request</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
