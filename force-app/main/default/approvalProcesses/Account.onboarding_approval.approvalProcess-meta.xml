<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>onboarding_checklist__c</field>
        <field>onboarding_doc_received__c</field>
        <field>Onboarding_Comments__c</field>
        <field>Agent__c</field>
        <field>Onboarding_Actions_Complete__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>update_onboarding_approved_checkbox</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>update_onboarding_stage</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>mel.dinh@incomlend.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>onboard approval</label>
        <name>onboard_approval</name>
    </approvalStep>
    <emailTemplate>Incomlend_emails/Onboarding_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.onboarding_stage__c</field>
            <operation>equals</operation>
            <value>60.Approvals</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.RecordType</field>
            <operation>notEqual</operation>
            <value>Buyer</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Sub_type__c</field>
            <operation>notEqual</operation>
            <value>Purchaser</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>onboarding approval</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
